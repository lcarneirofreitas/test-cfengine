####################################################################################
bundle common g {

        vars:   
                any::
                "class_file" string => "/etc/default/classes_servidores_teravoz";
                "class_strs" slist => readstringlist("$(class_file)",
                                                     "#.*?\n", "\s+", "inf", "inf");
        classes:
                "$(class_strs)" expression => "any";
}

bundle agent users {

	linux.ubuntu::

        "Copy /etc/sudoers.d/infra"
        usebundle => copy_from_master_default("/etc/sudoers.d/infra","/etc/sudoers.d/infra","0440","root","root");

}

